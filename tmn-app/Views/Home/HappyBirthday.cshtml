@{
    // ViewData["Title"] = "Chúc mừng sinh nhật bé Nghi";
    ViewData["Title"] = "Second page";

}
<link href="~/css/HappyBirthday.css" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="panel-hpbd" id="panel-hpbd">
        <div class="panel-content front" id="front">
            <img draggable="false" src="~/images/birthdaycake_1.png" alt="cake1" id="cake1" class="cake1" />
        </div>
        <div class="panel-content back" id="back">
            <div class="back-content">
                <div class="row">
                    <span class="col-12 title">Tặng emmmmm</span>
                    <img draggable="false" src="~/images/bouquet.png" alt="cake2" id="cake2" class="cake2 col-12" />
                </div>
            </div>
        </div>
    </div>
    <div class="content">
        <div class="row">
            <div class="col-12">
                <div class="inside-content">
                    <div class="border-white">
                        <img draggable="false" src="~/images/frame.png" class="frame" />
                    </div>
                </div>
                <img draggable="false" src="~/images/daisy.png" class="flower bottom-flower" />
                <img draggable="false" src="~/images/sunflower.png" class="flower side-flower" />
                <img draggable="false" src="~/images/tape.png" class="tape" />
                <img draggable="false" src="~/images/star.png" class="star" />
            </div>
            <div class="col-12">
                <span class="title float-end">Trương Mẩn Nghi</span>
            </div>
        </div>
        @Html.Partial("Balloon")
    </div>
</div>

<script src="~/js/HappyBirthday.js" type="text/javascript"></script>

